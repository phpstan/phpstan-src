{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchPaths": ["+(composer.json)"],
      "enabled": true,
      "groupName": "website"
    },
    {
      "matchPaths": ["build-cs/**"],
      "enabled": true,
      "groupName": "website"
    },
    {
      "matchPaths": ["compiler/**"],
      "enabled": true,
      "groupName": "playground-api"
    },
    {
      "matchPaths": [".github/**"],
      "enabled": true,
      "groupName": "github-actions"
    }
  ]
}
